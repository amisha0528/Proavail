            document.getElementById("bname").style.border="black 1px solid";
            document.getElementById("timings").style.border="black 1px solid";
            document.getElementById("days").style.border="black 1px solid";
            document.getElementById("phone").style.backgroundColor="rgba(220, 244, 212,0.3)";
            document.getElementById("email").style.backgroundColor="rgba(220, 244, 212,0.3)";
            document.getElementById("address").style.backgroundColor="rgba(220, 244, 212,0.3)";
            document.getElementById("city").style.backgroundColor="rgba(220, 244, 212,0.3)";
            document.getElementById("pincode").style.backgroundColor="rgba(220, 244, 212,0.3)";
            document.getElementById("save-button").style.display ="block";
            document.getElementById("bio").style.border="black 1px solid";
            document.getElementById("notifications").style.border="black 1px solid";
            }
            function edit(){
                document.getElementById("city").value="Chandigarh";
                document.getElementById("phone").disabled = true;
                document.getElementById("email").disabled = true;
                document.getElementById("address").disabled = true;
                document.getElementById("city").disabled = true;
                document.getElementById("pincode").disabled = true;
                document.getElementById("bname").disabled = true;
                document.getElementById("timings").disabled = true;
                document.getElementById("days").disabled = true;
                document.getElementById("bio").disabled = true;
                document.getElementById("notifications").disabled = true;
                document.getElementById("edit").style.display ="block";
                document.getElementById("bname").style.border="0px";
                document.getElementById("timings").style.border="0px";
                document.getElementById("days").style.border="0px";
                document.getElementById("phone").style.backgroundColor="rgb(220, 244, 212)";
                document.getElementById("email").style.backgroundColor="rgb(220, 244, 212)";
                document.getElementById("address").style.backgroundColor="rgb(220, 244, 212)";
                document.getElementById("city").style.backgroundColor="rgb(220, 244, 212)";
                document.getElementById("pincode").style.backgroundColor="rgb(220, 244, 212)";
                document.getElementById("save-button").style.display ="none";
                document.getElementById("bio").style.border="0px";
                document.getElementById("notifications").style.border="0px";
            }
    </script>
